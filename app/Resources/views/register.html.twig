{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="header span12">
            <h3 style="margin-bottom: 40px">Sign up for free now!</h3>
        </div>
        <div class="span3"></div>
        <div class="span6 text-left">

            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.password.first) }}
            {{ form_row(form.password.second) }}
            {{ form_row(form.tel) }}

            <button type="submit">Register!</button>
            {{ form_end(form) }}

        </div>
        <div class="span3"></div>
    </div>

{% endblock %}